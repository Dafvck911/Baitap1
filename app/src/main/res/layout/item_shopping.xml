<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutcompat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_shoping"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:src="@drawable/than_tai"/>
        <TextView
            android:id="@+id/ten_shoping"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Thần tài" />
        <TextView
            android:id="@+id/price_shoping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:textColor="@color/price"
            android:textStyle="bold"
            android:text="Giá tiền"
            android:drawableStart="@drawable/money_24"/>
        <TextView
            android:id="@+id/tvTang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="9dp"
            android:text=" + "
            android:textSize="18dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/soluong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#CDCACA"
            android:enabled="false"
            android:inputType="number"
            android:text="99"
            android:textAlignment="center"
            android:textStyle="italic|normal" />
        <TextView
            android:id="@+id/tvGiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text=" - "
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvTong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000"
            android:layout_marginStart="5dp"
            android:layout_marginTop="9dp"
            android:drawablePadding="2dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>