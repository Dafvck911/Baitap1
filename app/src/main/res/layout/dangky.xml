<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="600dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangky"
                android:textSize="23sp"
                android:textColor="#4CAC9E"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/tennhanvien"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:hint="@string/tennhanvien"
                android:layout_marginTop="40dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/tentaikhoan_dk"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:hint="@string/tentaikhoan"
                android:layout_marginTop="40dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/matkhau_dk"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:hint="@string/matkhau"
                android:layout_marginTop="40dp"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/ngaytaotk"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/ngaytaotaikhoan"
                android:inputType="datetime" />

            <Button
                android:id="@+id/bt_dangky"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Đăng ký"
                android:backgroundTint="#83E8D1"
                android:textColor="#318379"
                android:textSize="15sp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>