<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/than_tai"
            app:riv_corner_radius="20dp"/>
        <TextView
            android:id="@+id/tensp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/imageView1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/tensp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/giatien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/money_24"
            android:textColor="@color/price"
            android:layout_below="@+id/mota"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/money"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/giatien"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="2dp"
            android:tooltipText="add"
            android:src="@drawable/add_shopping"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>