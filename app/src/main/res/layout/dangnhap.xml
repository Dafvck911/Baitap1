<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="600dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dangnhap"
                android:textSize="23sp"
                android:textColor="#4CAC9E"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="70dp"/>

            <EditText
                android:id="@+id/tentaikhoan_dn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:hint="@string/tentaikhoan"
                android:layout_marginTop="60dp"
                android:inputType="text"/>
            <EditText
                android:id="@+id/matkhau_dn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="45dp"
                android:hint="@string/matkhau"
                android:layout_marginTop="40dp"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/bt_dangnhap"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:text="Đăng nhập"
                android:backgroundTint="#83E8D1"
                android:textColor="#318379"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/dangkytk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa có tài khoản?"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:textSize="17sp"
                android:textColor="#318379"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>